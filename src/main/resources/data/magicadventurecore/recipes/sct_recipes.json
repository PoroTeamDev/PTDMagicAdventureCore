ServerEvents.recipes(event => {
  const sctType = 'magicadventurecore:sct_hybrid_crafting';

  const toIngredientJson = item => Ingredient.of(item).toJson();
  const toResultJson = item => Item.of(item).toJson();
  const toIngredients = items => {
  const list = items.map(toIngredientJson);
  while (list.length < 14) {
  list.push({});
}
return list;
};

  const sctRecipe = (output, ingredients, bloodCost, manaCost) => {
    event.custom({
      type: sctType,
      ingredients: toIngredients(ingredients),
      blood_cost: bloodCost,
      mana_cost: manaCost,
      blood_orb: toIngredientJson('bloodmagic:weakbloodorb'),
      mana_mirror: toIngredientJson('botania:mana_mirror'),
      result: toResultJson(output)
    });
  };

event.shaped('magicadventurecore:sct_crafting_block', [
'ABA',
'CDC',
'EFE'
], {
A: 'botania:mana_diamond',
B: 'bloodmagic:infusedslate',
C: 'botania:mana_pearl',
D: 'minecraft:crafting_table',
E: 'bloodmagic:weakbloodorb',
